<%- include('_layouts/header.ejs') %>

<div class="row products">
  <%products.forEach(p=>{ %>
  <div class="col-xa-12 col-md-4 p">
    <a href="/products/<%=p.category%>/<%=p.slug %>" class="pa">
      <img src="/<%=p.image  %> " class="pimage" alt="image" />
    </a>
    <h3><%=p.title%></h3>
    <h3>$ <%= parseFloat(p.price).toFixed(2)%></h3>
    <a class="vd" href="/products/<%=p.category%>/<%=p.slug%>  "
      >View Details</a
    >
  </div>

  <% }) %>
</div>


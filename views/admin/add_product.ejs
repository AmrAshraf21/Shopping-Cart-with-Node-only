<%- include('../_layouts/adminHeader.ejs') %>
<script src="/js/main.js"></script>

<h1 class="page-title">Add a Product</h1>
<a href="/admin/product" class="btn btn-primary">Back to the Products</a>
<br />
<form action="/admin/products/add-product" enctype="multipart/form-data" method="post">
  <div class="form-group">
    <label for="">Title</label>
    <input
      type="text"
      name="title"
      value="<%= title %>"
      class="form-control"
      placeholder="title"
    />
  </div>


  <div class="form-group">
    <label for="">Description</label>

    <textarea
    
      placeholder="Enter your Description Here"
      name="desc"
      class="form-control"
      cols="30"
      rows="10"
    >
<%=desc  %> </textarea
    >
  </div>



  <div class="form-group">
    <label for="">Price</label>
    <input
      type="text"
      name="price"
      value="<%= price %>"
      class="form-control"
      placeholder="Price"
    />
  </div>
  <div class="form-group">
    <label for="">Image</label>
    <input
      type="file"
      name="image"
      id="img"
      class="form-control"
      placeholder="Price"
    />
    <img src="#" id="imgPreview" alt="">
  </div>
  <div class="form-group">

    <label for="">Category</label>
    <select name="category" class="form-control">
        <% categories.forEach(cat=>{ %>
                <option value="<%=cat.slug%>"><%=cat.title%> </option>

            <% }) %> 

    </select>


  </div>

  

  <button class="btn btn-default">Submit</button>
</form>

<script>
    
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            
            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            
            reader.readAsDataURL(input.files[0]);
        }
    }
    
    $("#img").change(function() {
        readURL(this);
    });
    
</script>
<%- include('../_layouts/adminFooter.ejs') %>

<%- include('../_layouts/adminHeader.ejs') %>

<h1 class="page-title">Edit a Page</h1>
<a href="/admin/pages" class="btn btn-primary">Back to the Pages</a>
<br />
<form action="/admin/pages/edit-page/<%=_id %> " method="post">
  <div class="form-group">
    <label for="">Title</label>
    <input
      type="text"
      name="title"
      value="<%= title %>"
      class="form-control"
      placeholder="title"
    />
  </div>

  <div class="form-group">
    <label for="">Slug</label>
    <input
      type="text"
      name="slug"
      value="<%= slug %>"
      class="form-control"
      placeholder="slug"
    />
  </div>

  <div class="form-group">
    <label for="">Content</label>

    <textarea
      placeholder="Enter your Content Here"
      name="content"
      class="form-control"
      cols="30"
      rows="10"
      id="ta"
    >
<%=content  %> </textarea
    >
  </div>
  
  <button class="btn btn-default" type="submit">Submit</button>
</form>

<%- include('../_layouts/adminFooter.ejs') %>
